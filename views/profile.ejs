<% include ./partials/_head %>
  <body>
     <% include ./partials/_header %>
    <h1>Your Profile</h1>
    <h2>Avatar: </h2>
    <img src="<%= userinfo.user_img %>"/>
    <ul>
      <li>Your Username: <%= userinfo.username %></li>
      <li>Your Email: <%= userinfo.email %></li>
      <li>Your Password: <%= userinfo.password %></li>
    </ul>
    <section>
      <form class="form-group" action="/user/id" method="POST">
        <div class="form-group mb-2">
          <label for="longURL">Update Username:</label>
          <input class="form-control" type="text" name="username" placeholder="Enter your username" style="width: 300px; margin: 1em">
          <label for="longURL">Update Email:</label>
          <input class="form-control" type="text" name="email" placeholder="Enter your email" style="width: 300px; margin: 1em">
          <label for="longURL">Update Password:</label>
          <input class="form-control" type="text" name="password" placeholder="Enter your password" style="width: 300px; margin: 1em">
          <label for="longURL">Update Avatar:</label>
          <input class="form-control" type="text" name="avatar" placeholder="Enter your avatar url" style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </section>
  </body>
</html>
